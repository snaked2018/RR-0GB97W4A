{% schema %}
{
  "name": {
    "en": "Custom Profile"
  },
  "settings": [
    {
      "type": "text",
      "id": "name_label",
      "label": "Name Label",
      "default": "Name"
    },
    {
      "type": "text",
      "id": "about_label",
      "label": "About Me Label",
      "default": "About Me"
    },
    {
      "type": "text",
      "id": "email_label",
      "label": "Email Label",
      "default": "Email"
    },
    {
      "type": "text",
      "id": "birthday_label",
      "label": "Birthday Label",
      "default": "Birthday"
    },
    {
      "type": "text",
      "id": "address_label",
      "label": "Address Label",
      "default": "Address"
    }
  ],
  "blocks": [
    {
      "type": "header",
      "name": "Header"
    },
    {
      "type": "grid",
      "name": "Grid"
    }
  ],
  "presets": [
    {
      "name": {
        "en": "Custom Profile"
      }
    }
  ]
}
{% endschema %}

{{ 'section-custom-profile.css' | asset_url | stylesheet_tag }}

{% if section.blocks.size > 0 %}
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'header' %}
        <div class="custom-page-header">
          <form action="/submit-profile" method="post">
            <label for="name">{{ section.settings.name_label }}</label>
            <input type="text" id="name" name="name" required>
            <label for="about">{{ section.settings.about_label }}</label>
            <textarea id="about" name="about" rows="4" required></textarea>
            <label for="email">{{ section.settings.email_label }}</label>
            <input type="email" id="email" name="email" required>
            <label for="birthday">{{ section.settings.birthday_label }}</label>
            <input type="date" id="birthday" name="birthday">
            <label for="address">{{ section.settings.address_label }}</label>
            <input type="text" id="address" name="address">
            <button type="submit">Submit</button>
          </form>
        </div>
      {% when 'grid' %}
        <div class="custom-page-grid">
          {% for content in block.settings.contents %}
            <div class="grid-item">
              <h2>{{ content.title }}</h2>
              <p>{{ content.description }}</p>
            </div>
          {% endfor %}
        </div>
    {% endcase %}
  {% endfor %}
{% endif %}
