{% schema %}
{
  "name": {
    "en": "Custom Profile Page"
  },
  "settings": [
    {
      "type": "text",
      "id": "name_label",
      "label": "Name Label",
      "default": "Name"
    },
    {
      "type": "text",
      "id": "about_label",
      "label": "About Me Label",
      "default": "About Me"
    },
    {
      "type": "text",
      "id": "email_label",
      "label": "Email Label",
      "default": "Email"
    },
    {
      "type": "text",
      "id": "birthday_label",
      "label": "Birthday Label",
      "default": "Birthday"
    },
    {
      "type": "text",
      "id": "address_label",
      "label": "Address Label",
      "default": "Address"
    }
  ],
  "blocks": [
    {
      "type": "header",
      "name": "Profile Header"
    },
    {
      "type": "grid",
      "name": "Content Grid"
    }
  ],
  "presets": [
    {
      "name": {
        "en": "Custom Profile Page"
      }
    }
  ]
}
{% endschema %}

{{ 'section-custom-profile.css' | asset_url | stylesheet_tag }}

<div class="custom-page">
  {% if section.blocks.size > 0 %}
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'header' %}
          <div class="custom-page-header">
            <h1>{{ block.settings.name_label }}</h1>
            <p>{{ block.settings.about_label }}</p>
            <p>{{ block.settings.email_label }}</p>
            <p>{{ block.settings.birthday_label }}</p>
            <p>{{ block.settings.address_label }}</p>
          </div>
        {% when 'grid' %}
          <div class="custom-page-grid">
            {% for content in block.settings.contents %}
              <div class="grid-item">
                <h2>{{ content.title }}</h2>
                <p>{{ content.description }}</p>
              </div>
            {% endfor %}
          </div>
      {% endcase %}
    {% endfor %}
  {% endif %}
</div>
