<style>
    .custom-page-header {
        margin-bottom: 20px;
      }
      
      .custom-page-header form {
        max-width: 500px;
        margin: 0 auto;
      }
      
      .custom-page-header label {
        display: block;
        margin-bottom: 5px;
      }
      
      .custom-page-header input[type="text"],
      .custom-page-header input[type="email"],
      .custom-page-header textarea,
      .custom-page-header button {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
      }
      
      .custom-page-header button {
        background-color: #007bff;
        color: #fff;
        border: none;
        cursor: pointer;
      }
      
      .custom-page-header button:hover {
        background-color: #0056b3;
      }
      
      .custom-page-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        grid-gap: 20px;
      }
      
      .grid-item {
        background-color: #f0f0f0;
        padding: 20px;
        border-radius: 5px;
      }
</style>

{% if section.blocks.size > 0 %}
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'header' %}
        <div class="custom-page-header">
          <h1>Welcome to our Custom Page!</h1>
          <form action="/submit-profile" method="post">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>
            <label for="about">About Me:</label>
            <textarea id="about" name="about" rows="4" required></textarea>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
            <label for="birthday">Birthday:</label>
            <input type="date" id="birthday" name="birthday">
            <label for="address">Address:</label>
            <input type="text" id="address" name="address">
            <button type="submit">Submit</button>
          </form>
        </div>
      {% when 'grid' %}
        <div class="custom-page-grid">
          {% for block in section.blocks %}
            <div class="grid-item">
              <h2>{{ block.settings.title }}</h2>
              <p>{{ block.settings.description }}</p>
            </div>
          {% endfor %}
        </div>
    {% endcase %}
  {% endfor %}
{% endif %}


{% schema %}
{
   "name": {
      "en": "Custom Profile"
    },
  "settings": [],
  "blocks": [
    {
      "type": "header",
      "name": "Header"
    },
    {
      "type": "grid",
      "name": "Grid"
    }
  ],
  "presets": [
    {
      "name": {
        "en": "Custom Profile"
      }
    }
    ]
}
{% endschema %}