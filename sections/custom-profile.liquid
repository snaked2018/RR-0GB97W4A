{% schema %}
{
  "name": "Custom Page",
  "settings": [
    {
      "type": "text",
      "id": "name",
      "label": "Name"
    },
    {
      "type": "textarea",
      "id": "about_me",
      "label": "About Me"
    },
    {
      "type": "email",
      "id": "email",
      "label": "Email"
    },
    {
      "type": "text",
      "id": "birthday",
      "label": "Birthday"
    },
    {
      "type": "text",
      "id": "address",
      "label": "Address"
    }
  ]
}
{% endschema %}

{% assign name = settings.name %}
{% assign about_me = settings.about_me %}
{% assign email = settings.email %}
{% assign birthday = settings.birthday %}
{% assign address = settings.address %}

<style>
  /* Header styles */
  header {
    background-color: #f2f2f2;
    padding: 20px;
    margin-bottom: 20px;
  }

  header h1 {
    margin: 0;
  }

  /* Grid styles */
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    grid-gap: 20px;
  }

  .grid-item {
    background-color: #ffffff;
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.1);
  }

  .grid-item h2 {
    margin-top: 0;
  }
</style>

<header>
  <h1>{{ name }}</h1>
  <p>{{ about_me }}</p>
  <p>Email: {{ email }}</p>
  <p>Birthday: {{ birthday }}</p>
  <p>Address: {{ address }}</p>
</header>

<div class="grid">
  {% for block in section.blocks %}
    <div class="grid-item">
      <h2>{{ block.settings.title }}</h2>
      <p>{{ block.settings.description }}</p>
    </div>
  {% endfor %}
</div>
