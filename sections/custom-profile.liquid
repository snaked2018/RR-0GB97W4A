{% schema %}
{
  "name": {
    "en": "Custom Profile"
  },
  "settings": [
    {
      "type": "text",
      "id": "name_label",
      "label": "Name Label",
      "default": "Name"
    },
    {
      "type": "text",
      "id": "about_label",
      "label": "About Me Label",
      "default": "About Me"
    },
    {
      "type": "text",
      "id": "email_label",
      "label": "Email Label",
      "default": "Email"
    },
    {
      "type": "text",
      "id": "birthday_label",
      "label": "Birthday Label",
      "default": "Birthday"
    },
    {
      "type": "text",
      "id": "address_label",
      "label": "Address Label",
      "default": "Address"
    }
  ],
  "blocks": [
    {
      "type": "header",
      "name": "Header",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Name"
        },
        {
          "type": "text",
          "id": "about",
          "label": "About Me"
        },
        {
          "type": "email",
          "id": "email",
          "label": "Email"
        },
        {
          "type": "date",
          "id": "birthday",
          "label": "Birthday"
        },
        {
          "type": "text",
          "id": "address",
          "label": "Address"
        }
      ]
    },
    {
      "type": "grid",
      "name": "Grid",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "additional_field_1",
          "label": "Additional Field 1"
        },
        {
          "type": "text",
          "id": "additional_field_2",
          "label": "Additional Field 2"
        },
        {
          "type": "select",
          "id": "blocks_per_row",
          "label": "Blocks Per Row",
          "default": "3",
          "options": [
            { "value": "1", "label": "1" },
            { "value": "2", "label": "2" },
            { "value": "3", "label": "3" },
            { "value": "4", "label": "4" },
            { "value": "5", "label": "5" }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": {
        "en": "Custom Profile"
      }
    }
  ]
}
{% endschema %}

{{ 'section-custom-profile.css' | asset_url | stylesheet_tag }}

{% if section.blocks.size > 0 %}
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'header' %}
        <div class="custom-page-header">
          <h2>{{ block.settings.name }}</h2>
          <p>{{ block.settings.about }}</p>
          <p>{{ block.settings.email }}</p>
          <p>{{ block.settings.birthday }}</p>
          <p>{{ block.settings.address }}</p>
        </div>
      {% when 'grid' %}
        <div class="custom-page-grid" style="grid-template-columns: repeat({{ block.settings.blocks_per_row }}, 1fr);">
          {% for content in block.settings.contents %}
            <div class="grid-item">
              <h2>{{ content.title }}</h2>
              <p>{{ content.description }}</p>
              <p>{{ content.additional_field_1 }}</p>
              <p>{{ content.additional_field_2 }}</p>
              <!-- Add more fields as needed -->
            </div>
          {% endfor %}
        </div>
    {% endcase %}
  {% endfor %}
{% endif %}
