<div class="banner-section">
    <img src="{{ section.settings.banner_image | img_url: 'master' }}" alt="Banner Image">
  </div>
  
  <style>
    .banner-section {
      width: 100%;
      text-align: center;
    }
    .banner-section img {
      max-width: 100%;
      height: auto;
    }
  </style>
  
  {% schema %}
  {
    "name": "Custom Profile",
    "settings": [
      {
        "type": "image_picker",
        "id": "banner_image",
        "label": "Banner Image"
      }
    ]
  }
  {% endschema %}
  